<!--pages/personal/tpl/personal-tpl.wxml-->
<template name="showItemTpl"> <!--将template的内容整合成一个模块-->
  <view class="content">  
    <text>ID：{{id}}\n</text>
    <text>名称：{{name}}\n</text>
    <text>描述：{{description}}\n</text>
    <view wx:if="{{score}}">
      <text>分数：{{score}}\n</text>
      <text>排名：{{rank}}</text>
    </view>
    <view wx:if="{{judge}}">
      <button bindtap="Lock" data-id="{{id}}" data-lock="jLock">评委锁定</button>
      <button bindtap="Lock" data-id="{{id}}" data-lock="cLock">参赛者锁定</button>
    </view>
  </view>
</template>